<%= form_for [:admin, ftp_profile] do |f| %>

	<div class="form-group row">
		<%= f.label :name, "Найменування", class: "col-md-2 col-form-label" %>
		<div class="col-md-10">
			<%= f.text_field :name, class: "form-control" %>
		</div>
	</div>
		
	<div class="form-group row">
		<%= f.label :host,"Хост", class: "col-md-2 col-form-label" %>
		<div class="col-md-7">
			<%= f.text_field :host, class: "form-control" %>
				<div class="invalid-feedback">повинен бути присутнім</div>
		</div>
		<%= f.label :port,"Порт", class: "col-md-1 col-form-label" %>
		<div class="col-md-2">
			<%= f.number_field :port, class: "form-control" %>
				<div class="invalid-feedback">повинен бути присутнім</div>
		</div>
	</div>

	<div class="form-group row">
		<%= f.label :username,"Користувач", class: "col-md-2 col-form-label" %>
		<div class="col-md-5">
			<%= f.text_field :username, class: "form-control" %>
				<div class="invalid-feedback">повинен бути присутнім</div>
		</div>
		<%= f.label :password,"Пароль", class: "col-md-1 col-form-label" %>
		<div class="col-md-4">
			<%= f.password_field :password, class: "form-control", value: ftp_profile.password %>
				<div class="invalid-feedback">повинен бути присутнім</div>
		</div>
	</div>

	<%= f.hidden_field :default %>

	<div class="row">
		<div class="col-md-3">
			<%= f.button type: 'submit', class: "btn3d btn btn-primary btn-block" do %>
				<i class="fas fa-save"></i> Зберегти
			<% end %>
		</div>
		<div class="col-md-3">
			<%= link_to :back, class: "text-white btn3d btn btn-warning btn-block" do %>
				<i class="fas fa-undo-alt"></i> Повернутись
			<% end %>
		</div>
	</div>
<% end %>