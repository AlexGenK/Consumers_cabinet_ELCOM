<div class='row'>
	<div class='col-md-3'></div>
	<div class='col-md-9'><h3><%= @consumer.name %></h3></div>
</div>
<div class='row'>
	<div class='col-md-3'>
		<%= render '/buttons', active: 1 %>
	</div>
	<div class='col-md-9'>
		<%= render 'form', consumer: @consumer, style: 'show' %>
	</div>
</div>
<div class='row'>
	<div class='col-md-3'>
	</div>
	<div class='col-md-3'>
		<%= link_to consumers_path, class: "btn btn-outline-secondary btn-block" do %>
			<i class="fas fa-undo-alt"></i> Повернутись
		<% end %>
	</div>
	<div class='col-md-3'>
		<%= link_to edit_consumer_path(@consumer), class: "btn btn-outline-dark btn-block" do %>
			<i class="fas fa-edit"></i> Редагувати
		<% end %>
	</div>
</div>